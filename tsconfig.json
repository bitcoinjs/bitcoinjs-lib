{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./src",
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./ts_src",
    "types": [
      "node"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "ts_src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules/**/*"
  ]
}
